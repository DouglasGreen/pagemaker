{
    "name": "douglasgreen/pagemaker",
    "description": "A project to build webpages in OOP style with a plug-in architecture",
    "license": "MIT",
    "type": "library",
    "homepage": "https://github.com/douglasgreen/pagemaker",
    "authors": [
        {
            "name": "Douglas Green",
            "email": "douglas@nurd.site",
            "homepage": "https://nurd.site/",
            "role": "Developer"
        }
    ],
    "keywords": [
        "automation",
        "best practices",
        "boilerplate",
        "code quality",
        "code standards",
        "code style",
        "coding guidelines",
        "configuration",
        "development tools",
        "linting",
        "project linting",
        "project templates",
        "scaffolding",
        "setup",
        "starter kit",
        "templates"
    ],

    "autoload": {
        "files": [
            "src/Exceptions.php"
        ],
        "psr-4": {
            "DouglasGreen\\PageMaker\\": "src/",
            "DouglasGreen\\PageMaker\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpmd/phpmd": "^2.15",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.5",
        "rector/rector": "^1.0",
        "symplify/easy-coding-standard": "^12.2"
    },
    "scripts": {
        "lint": [
            "ecs",
            "rector --dry-run",
            "./run_phpmd.sh",
            "./run_phpstan.sh"
        ],
        "lint:fix": [
            "ecs --fix",
            "rector"
        ],
        "test": "phpunit"
    }
}
